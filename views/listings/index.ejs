<% layout("/layouts/boilerplate") %> <%= success %>
  
<style>
  .filters-bar {
  display: flex;
  align-items: center;
  justify-content: space-between; /* toggle fixed right */
  gap: 1rem;
  padding: 0 16px;
  margin-top: 2rem;
}

.filters-scroll {
  display: flex;
  gap: 2rem;
  flex-wrap: nowrap;
  overflow-x: auto; /* only icons scroll */
  overflow-y: hidden;
  white-space: nowrap;
  -webkit-overflow-scrolling: touch;
  scrollbar-width: none; /* Firefox */
  -ms-overflow-style: none; /* IE/Edge */
  padding-right: 4rem;
}
.filters-scroll::-webkit-scrollbar {
  display: none; /* Chrome/Safari */
}

.filters {
  text-align: center;
  opacity: 0.7;
  flex-shrink: 0;
}
.filters:hover {
  opacity: 1.04;
  cursor: pointer;
  transform: scale(1.07);
  transition: all 0.3s ease;
}
.filters p {
  font-size: 0.8rem;
}

.tax-toggle {
  flex-shrink: 0;
  border: 1px solid rgb(149, 146, 146);
  border-radius: 1rem;
  height: 3rem;
  padding: 0 1rem;
  display: flex;
  align-items: center;
  white-space: nowrap;
  gap: 0.5rem;
}

.toggle-text {
  font-size: 0.8rem;
}

.tax-info {
  display: none;
}

</style>

<div class="filters-bar">
  <!-- Scrollable icons -->
  <div class="filters-scroll">
    <div class="filters"><i class="fa-solid fa-fire"></i><p>Trending</p></div>
    <div class="filters"><i class="fa-solid fa-mountain-city"></i><p>Iconic Cities</p></div>
    <div class="filters"><i class="fa-solid fa-mountain"></i><p>Mountains</p></div>
    <div class="filters"><i class="fa-solid fa-umbrella-beach"></i><p>Beachside</p></div>
    <div class="filters"><i class="fa-solid fa-campground"></i><p>Camping</p></div>
    <div class="filters"><i class="fa-solid fa-leaf"></i><p>Nature</p></div>
    <div class="filters"><i class="fa-solid fa-person-swimming"></i><p>Amazing Pools</p></div>
    <div class="filters"><i class="fa-solid fa-bed"></i><p>Rooms</p></div>
    <div class="filters"><i class="fa-solid fa-indian-rupee-sign"></i><p>Price</p></div>
  </div>

  <!-- Fixed toggle -->
  <div class="tax-toggle">
    <div class="form-check form-switch">
      <input class="form-check-input" type="checkbox" id="switchCheckDefault" />
      <label class="form-check-label toggle-text" for="switchCheckDefault">
        Display total before taxes
      </label>
    </div>
  </div>
</div>



<div class="container">
<div class="row row-cols-xl-5 row-cols-lg-4 row-cols-md-3 row-cols-sm-2 row-cols-1 g-3 mt-3">
  <% for (let listing of allListings) { %>
    <div class="col">
      <a href="/listings/<%= listing._id %>" class="text-decoration-none text-dark">
        <div class="card listing-card shadow-sm border-0 rounded-4 overflow-hidden position-relative hover-effect">
          
          <!-- Wishlist Heart Icon -->
          <i class="fa-regular fa-heart wishlist-icon position-absolute top-0 end-0 m-2 fs-4 text-danger"></i>

          <!-- Listing Image -->
          <img 
            src="<%= listing.image.url %>" 
            class="card-img-top" 
            alt="listing image" 
            style="height: 14rem; object-fit: cover;"
          /> 


          <!-- Card Body -->
          <div class="card-body">
            <h5 class="fw-semibold mb-1"><%= listing.title %></h5>
            <p class="mb-0">
                &#8377;<%= listing.price.toLocaleString("en-IN") %> <span class="text-muted" style="font-size: 0.9rem;">/ night</span>
                <i class="tax-info"> &nbsp; &nbsp;+18% GST</i>
            </p>
          </div>
        </div>
      </a>
    </div>
  <% } %>
 </div>
</div>

<script>
  let taxSwitch = document.getElementById("switchCheckDefault");
  taxSwitch.addEventListener("click", () => {
    let taxInfo = document.getElementsByClassName("tax-info");
    for(info of taxInfo){
      if(info.style.display != "inline"){
        info.style.display = "inline";
      }else{
        info.style.display = "none";
      }
    }
  });
</script>
