<%  layout("/layouts/boilerplate") %>
<script>
  const mapToken = "<%= process.env.MAP_TOKEN %>";
  const listing = <%- JSON.stringify(listing) %>;
  console.log("Coordinates:", listing.geometry.coordinates);
  console.log("Location:", listing.location);
</script>

<div class="container mt-4">

  <!-- Title -->
  <h3 class="fw-bold mb-3 text-center"><%= listing.title %></h3>

  <!-- Card -->
  <div class="card shadow-lg border-2 rounded-3 mb-4 col-md-5 mx-auto">
    <img src="<%= listing.image.url %>" class="card-img-top rounded-top" alt="listing_image">

    <div class="card-body">
      <p class="mb-1 text-muted">
        Owned by <b><%= listing.owner.username %></b>
      </p>
      
      <p class="text-muted mb-1"><%= listing.description %></p>

      <p class="mb-1">
        <i class="fa-solid fa-location-dot icon"></i>
        <%= listing.location %>, <%= listing.country %>
      </p>

      <h5 class="fw-bold text-success">
        â‚¹ <%= listing.price ? listing.price.toLocaleString("en-IN") : "Not Available" %> / night
      </h5>
    </div>
  </div>

   <!-- Edit/Delete Buttons -->
  <% if(currUser && listing.owner._id.equals(currUser._id)) { %>
    <div class=" btns d-flex justify-content-center mb-4 gap-3">
        <a href="/listings/<%=listing._id %>/edit"
           class="btn btn-dark px-4 edit-btn">
           Edit
        </a>
    
        <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
            <button class="btn btn-dark px-4 edit-btn">Delete</button>
        </form>
    </div>
<% } %>



<!-- Reviews -->
  <div class="col-md-8 mx-auto mb-5">
    <hr class="mb-4" />
       <% if(currUser) { %>
      <h4 class="mb-4 shadow-sm">Leave a Review</h4>
      <form action="/listings/<%= listing.id %>/reviews" method="POST" novalidate class="needs-validation">
       
        <!-- <div class="mb-3 mt-3">
          <label for="rating" class="form-control">Rating</label>
          <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
        </div> -->

        <div class="mb-2">
        <!-- <label for="rating" class="form-control">Your Rating</label><br /> -->
        <h6>
          Your Rating <i class="fa-regular fa-star ms-1 fs-5"></i>
        </h6>
        <fieldset class="starability-slot">
          <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
          <input type="radio" id="first-rate1" name="review[rating]" value="1" />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input type="radio" id="first-rate2" name="review[rating]" value="2" />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input type="radio" id="first-rate3" name="review[rating]" value="3" />
          <label for="first-rate3" title="Average">3 stars</label>
          <input type="radio" id="first-rate4" name="review[rating]" value="4" />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input type="radio" id="first-rate5" name="review[rating]"value="5" />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
        </div>

        <div class="mb-3">
          <!-- <label for="comment" class="form-control">Your Comment</label> -->
          <h6>
            Your Comment <i class="fa-regular fa-comment ms-1 fs-5"></i>
          </h6>
          <textarea 
          name="review[comment]" 
          id="comment" 
          rows="3"
          class="form-control"
          placeholder="Share your experience..."
          required
          ></textarea>
          <div class="invalid-feedback">
            Please add comments
          </div>
        </div>

        <!-- Submit -->
        <button class="btn btn-outline-dark rounded px-4">Submit Review</button>
      </form>
      <% } %>
      
      
      <% if(listing.reviews.length > 0) { %>
      <hr class="mt-5 mb-4" />
      <h5 class="mb-4">All Reviews</h5>
      <div class="row g-3">
        <% for(review of listing.reviews) { %>
          <div class="col-md-6">
          <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
              <h6 class="card-title fw-bold"><%= review.author.username %></h6>
              <p class="starability-result mb-2" data-rating="<%= review.rating %>"></p>
              <p class="card-text text-muted"><%= review.comment %></p>
              <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                <button class="btn btn-sm btn-outline-danger">Delete</button>
              </form>
            </div>
          </div>
         </div>
        <% } %>
      </div>
    <% } %>
  </div>

    <div class="col-md-8 mx-auto mb-5">
      <h3 class="mb-3">Where you'll be</h3>
      <div id="map" class="rounded shadow-sm" style="height: 400px; width: 850px;"></div>
    </div>

</div>

<script src="/js/map.js"></script>



